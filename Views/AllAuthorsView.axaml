<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="clr-namespace:PKS_Library.ViewModels;assembly=PKS_Library"
             mc:Ignorable="d" d:DesignWidth="750" d:DesignHeight="400"
             x:Class="PKS_Library.Views.AllAuthorsView"
			 x:DataType="vm:AllAuthorsViewModel">

	<StackPanel>
		<Grid Margin="0" Background="LightGray" ColumnDefinitions="150, 180, 150, 160, 55, 55">
			<TextBlock Text="Имя" Grid.Column="0" FontWeight="Bold" Margin="10, 0"/>
			<TextBlock Text="Фамилия" Grid.Column="1" FontWeight="Bold" Margin="10, 0"/>
			<TextBlock Text="Дата рождения" Grid.Column="2" FontWeight="Bold" Margin="10, 0"/>
			<TextBlock Text="Страна" Grid.Column="3" FontWeight="Bold" Margin="10, 0"/>
		</Grid>
		<ScrollViewer Height="350">
			<ListBox ItemsSource="{Binding Authors}">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<Grid ColumnDefinitions="150, 180, 150, 160, 55, 55"
								Margin="0">
							<TextBlock Text="{Binding FirstName}" Grid.Column="0"/>
							<TextBlock Text="{Binding LastName}" Grid.Column="1"/>
							<TextBlock Text="{Binding Birthdate}" Grid.Column="2"/>
							<TextBlock Text="{Binding Country}" Grid.Column="3"/>
							<Button Grid.Column="4"
									Content="Редактировать"
									Command="{Binding $parent[ListBox].((vm:AllAuthorsViewModel)DataContext).OpenEditAuthorPageCommand}"
									CommandParameter="{Binding .}">
								<PathIcon Data="{StaticResource EditIcon}" Foreground="Blue"></PathIcon>
							</Button>
							<Button Grid.Column="5" 
									Command="{Binding $parent[ListBox].((vm:AllAuthorsViewModel)DataContext).DeleteAuthorCommand}"
									CommandParameter="{Binding .}">
								<PathIcon Data="{StaticResource DeleteIcon}" Foreground="Red"></PathIcon>
							</Button>
						</Grid>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</ScrollViewer>
		<Grid ColumnDefinitions="Auto, *">
			<Button Command="{Binding OpenAddAuthorPageCommand}">
				<StackPanel Orientation="Horizontal" Spacing="10">
					<PathIcon Data="{StaticResource AddIcon}" Foreground="Green"></PathIcon>
					<TextBlock Text="Добавить автора"></TextBlock>
				</StackPanel>
			</Button>
			<TextBlock Grid.Column="1" HorizontalAlignment="Center" Text="{Binding InfoMessage}" Foreground="Red"/>
		</Grid>
	</StackPanel>

</UserControl>
