<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="clr-namespace:PKS_Library.ViewModels;assembly=PKS_Library"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PKS_Library.Views.AddBookView"
			 x:DataType="vm:AddBookViewModel">

	<Grid RowDefinitions="30, 10, 30, 10, 30, 10, 30, 10, 30, 10, 30, 20, 40, 20" ColumnDefinitions="*, Auto"
		  Margin="10" >
		<TextBlock TextAlignment="Center" Grid.Row="0" Grid.Column="0" Text="Название книги"
				   VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
		<TextBox Grid.Row="0" Grid.Column="1" Width="560" Text="{Binding Title, Mode=OneWayToSource}" Watermark="Название"></TextBox>
		<TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding TitleError}" Foreground="Red" FontSize="8"/>

		<TextBlock TextAlignment="Center" Grid.Row="2" Grid.Column="0" Text="Автор"
				   VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
		<ComboBox Grid.Row="2" Grid.Column="1" Width="560" Height="30"
				  ItemsSource="{Binding Authors}"
				  SelectedItem="{Binding Author}"></ComboBox>
		<TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding AuthorError}" Foreground="Red" FontSize="8"/>

		<TextBlock TextAlignment="Center" Grid.Row="4" Grid.Column="0" Text="Жанр"
				   VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
		<ComboBox Grid.Row="4" Grid.Column="1" Width="560" Height="30"
				  ItemsSource="{Binding Genres}"
				  SelectedItem="{Binding Genre}"></ComboBox>
		<TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding GenreError}" Foreground="Red" FontSize="8"/>

		<TextBlock TextAlignment="Center" Grid.Row="6" Grid.Column="0" Text="ISBN"
				   VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
		<TextBox Grid.Row="6" Grid.Column="1" Text="{Binding Isbn, Mode=OneWayToSource}" Watermark="111-11111-11-11"></TextBox>
		<TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding IsbnError}" Foreground="Red" FontSize="8"/>

		<TextBlock TextAlignment="Center" Grid.Row="8" Grid.Column="0" Text="Год издательства"
				   VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
		<TextBox Grid.Row="8" Grid.Column="1" Text="{Binding PublishYear, Mode=OneWayToSource}" Watermark="1987"></TextBox>
		<TextBlock Grid.Row="9" Grid.Column="1" Text="{Binding PublishYearError}" Foreground="Red" FontSize="8"/>

		<TextBlock TextAlignment="Center" Grid.Row="10" Grid.Column="0" Text="Количество в наличии"
				   VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
		<TextBox Grid.Row="10" Grid.Column="1" Text="{Binding QuantityInStock, Mode=OneWayToSource}" Watermark="25"></TextBox>
		<TextBlock Grid.Row="11" Grid.Column="1" Text="{Binding QuantityInStockError}" Foreground="Red" FontSize="8"/>

		<StackPanel Grid.Row="12" Grid.Column="1" Orientation="Horizontal" Spacing="10"
					HorizontalAlignment="Right" VerticalAlignment="Bottom">
			<Button Content="Создать" Command="{Binding CreateBookCommand}"></Button>
			<Button Content="Отмена" Command="{Binding GoToBooksPageCommand}"></Button>
		</StackPanel>

		<TextBlock Grid.Row="11" Grid.Column="1" Text="{Binding FatalError}" IsVisible="{Binding FatalError.Length}" Foreground="Red"/>
		<TextBlock Grid.Row="11" Grid.Column="1" Text="{Binding SuccessMessage}" IsVisible="{Binding SuccessMessage.Length}" Foreground="Green"/>
	</Grid>
	
</UserControl>
